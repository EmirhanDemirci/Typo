@model Typo.Model.Models.Account
<div class="page-header">
    <h1>Login <small>to get access to the website</small></h1>
</div>
<div class="container">
    <div class="row" id="test">
        <div class="col-sm-6">
            <div class="col-lg-12">
                <form method="post">
                    <div class="well">
                        <div class="form-group">
                            <label>E-mail:</label>
                            <input name="MailUser" type="email" class="form-control" placeholder="Your Email." required />
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            <input name="Password" type="password" class="form-control" placeholder="Your Password." required />
                        </div>
                        <button type="submit" class="btn btn-info">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 