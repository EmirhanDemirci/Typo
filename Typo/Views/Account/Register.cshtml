@model Account
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

    <div class="page-header">
        <h1>Register <small>to get access to the website</small></h1>
    </div>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="col-lg-12">
                <form method="post">
                    <div class="well">
                        <div class="form-group">
                            @* <h3 style="line-height: 20%;"><i class="fa fa-home fa-1x" style="line-height: 6%; color: #339966"></i> FirstName:</h3> *@
                            <label asp-for="username"></label>
                            <input asp-for="username" class="form-control" placeholder="Fill Username" data-val="true" />
                            <span asp-validation-for="username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @* <h3 style="line-height: 20%;"><i class="fa fa-envelope fa-1x" style="line-height: 6%; color: #339966"></i> LastName:</h3> *@
                            <label asp-for="password"></label>
                            <input asp-for="password" type="password" class="form-control" placeholder="Fill Password" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <button class="btn btn-default" type="submit">Register</button>
                    </div>
                </form>
            </div> 
        </div>
    </div>
</div>
